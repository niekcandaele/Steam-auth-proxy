{
  "name": "steam-auth-proxy",
  "version": "0.0.1",
  "description": "A production-grade OpenID Connect proxy for Steam",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t steam-auth-proxy .",
    "docker:run": "docker run -p 19000:19000 --env-file .env steam-auth-proxy"
  },
